MYCXXFLAGS=$(CXXFLAGS) -c
MYLDFLAGS=$(LDFLAGS)

ALL=libodbcpp.a
OBJS = \
	error.o \
	connection.o \
	dsn.o \
	command.o \
	ustring.o \
	bind.o \
	param.o \
	column.o \
	timetypepair.o \
	modifycommand.o \
	selectcommand.o

libodbcpp.a : ${OBJS}
	ar rc $@ ${OBJS}
%.o : %.cpp
	$(CXX) $(MYCXXFLAGS) -o $@ $<

.PHONY: clean

clean:
	rm -f ${OBJS} ${ALL}
